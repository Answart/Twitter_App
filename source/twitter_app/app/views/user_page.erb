<div class="container">
  <h1><%= @user.name %></h1>
  <br>
  <%= @user.user_name %>
  <hr>

<%= erb :_create_tweet %>

<h2>Tweets from People I follow</h2>
<div class="container-sml">
  <% @user.tweets.sort_by{ |tweet| tweet.created_at}.each do |tweet| %>
    <section class="tweet">
      <%= tweet.user.user_name %>: <br>
      <%= tweet.message %><br>
      <%= tweet.created_at %>
    </section>

  <% end %>  <!-- tweets of users Main User is following -->
</div>


</div>